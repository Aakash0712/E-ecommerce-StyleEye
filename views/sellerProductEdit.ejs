        <style>
            form {
          display: flex;
          flex-direction: column;
          align-items: center;
        }
        
        h2 {
          margin-bottom: 20px;
        }
        
        label {
          display: block;
          margin-top: 10px;
        }
        
        input[type="text"], textarea, input[type="number"], input[type="file"] {
          width: 300px;
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 4px;
          margin-bottom: 10px;
          font-size: 16px;
        }
        
        input[type="radio"] {
          display: none;
        }
        
        label[for^="type"] {
          display: inline-block;
          margin-right: 10px;
          margin-bottom: 10px;
          padding: 8px 16px;
          border: 2px solid #ccc;
          border-radius: 4px;
          cursor: pointer;
        }
        
        input[type="radio"]:checked + label {
          background-color: #007bff;
          color: #fff;
        }
        
        textarea {
          height: 120px;
        }
        
        button[type="submit"] {
          background-color: #007bff;
          color: #fff;
          padding: 10px 20px;
          border: none;
          border-radius: 4px;
          cursor: pointer;
        }
        
        button[type="submit"]:hover {
          background-color: #0062cc;
        }
        </style>
                <form action="/seller/edit/product/<%= product._id %>" method="post">

                    <h2>Product Form</h2>
                    <div style="display: flex;">
                    <div>
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="productName" value="<%= product.productName %>" required>
            </div>
              
                
                
                <div>
                <label for="name">Brand Name:</label>
                <input type="text" id="name" name="brand" value="<%= product.brand %>" required>
            </div>
            </div>
            
            <div style="display: flex;">
                    <div>
                        
                        <label for="name">Category Name:</label>
                        <input type="text" id="name" name="category" value="<%= product.category%>" required>
                    </div>
                    
                    <div>
                        <label for="description">Product Description:</label>
                        <textarea id="description" name="productDes"><%= product.productDes %></textarea>
                    </div>
                    
                </div>     
                    <div>
                    
                        <% product.variants.forEach(vara => { %>
                         
                            <label>
                                Variant Description:
                        <textarea name="vDes" required><%= vara.variantsDes %></textarea>
                    </label>
                </div>
                <input type="hidden" name="varId" value="<%= vara.variantId %>">
                <input type="hidden" name="vName" value="<%= vara.variantsName %>">
                    <label>
                        Variant Quantity:
            <input type="number" name="vSku" value="<%= vara.variantsSku %>" required>   
          </label>
          <input type="hidden" name="vId" value="<%= vara._id %>">
          <label >
              Variant Price:
              <input type="number" name="vPrice" value="<%= vara.variantsPrice %>" required>
            </label>
            
          <label>
            Variant Color:
           
            <input type="text" id="colors"  name="vcolor" value="<%= vara.variantscolor %>" list="color-list">
        
        <datalist id="color-list">
            <option value="Black">
                <option value="Blue">
                    <option value="Brown">
                        <option value="Cyan">
                <option value="DarkBlue">
                <option value="DarkCyan">
                <option value="DarkGray">
                <option value="DarkGreen">
                <option value="DarkMagenta">
                <option value="DarkRed">
                <option value="Gold">
                <option value="Gray">
                    <option value="Green">
                <option value="Indigo">
                <option value="LightBlue">
                <option value="LightGreen">
                <option value="LightGray">
                <option value="LightPink">
                <option value="Lime">
                <option value="Magenta">
                <option value="Maroon">
                <option value="Navy">
                <option value="Olive">
                <option value="Orange">
                <option value="Pink">
                <option value="Purple">
                <option value="Red">
                <option value="RoyalBlue">
                <option value="SaddleBrown">
                <option value="Salmon">
                <option value="SeaGreen">
                <option value="Sienna">
                <option value="Silver">
                <option value="SkyBlue">
                <option value="SlateBlue">
                <option value="SlateGray">
                <option value="SteelBlue">
                <option value="Tan">
                <option value="Teal">
                <option value="Tomato">
                <option value="Turquoise">
                <option value="Violet">
                <option value="Wheat">
                <option value="White">
                <option value="Yellow">
                <option value="YellowGreen">
                </datalist>
            </label>
          
          <label id="price-lala">
            Variant Size:
            <input type="text" name="vSize" value="<%= vara.variantsSize %>" required>
           
          </label>
          <% }) %>
          
          <button type="submit">Update Product</button>
          

        </form>
        
