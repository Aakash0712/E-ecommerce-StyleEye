        <option value="Yellow">
        <option value="YellowGreen">
        </datalist>
    </label>
  
  <label id="price-lala">
    Variant Size:
    <select name="variants[0][variantsSize]"  id="price-lol"  required>
      <option value="Small">Small</option>
      <option value="Medium">Medium</option>
      <option value="large">Large</option>
    </select>
  </label>

        <label for="image1">Poster Image One Upload Only:</label>
        <input type="file" id="image1" name="productImage" accept="image/*" single required>
      
        <label for="image2">Product Images multiple Upload:</label>
        <input type="file" id="image2" name="productImages" accept="image/*" multiple required>
        <button type="submit">Submit</button>
      </form>


      
      
</body>
<script>
  function toggleFirstName() {
    var radioButtons = document.getElementsByName("category");
    var firstNameLabel = document.getElementById("price-lala");
    var firstNameInput = document.getElementById("price-lol");
    
    if (radioButtons[1].checked) {
      firstNameLabel.style.display = "none";
      firstNameInput.style.display = "none";
    }
    if (radioButtons[0].checked) {
      firstNameLabel.style.display = "inline-block";
      firstNameInput.style.display = "inline-block";
    }
    if (radioButtons[2].checked) {
      firstNameLabel.style.display = "inline-block";
      firstNameInput.style.display = "inline-block";
    }
    if (radioButtons[3].checked) {
      firstNameLabel.style.display = "inline-block";
      firstNameInput.style.display = "inline-block";
    }
  }
  </script>
</html>