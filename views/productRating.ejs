    <!-- Modal -->
                    <div class="row">
                 
                    <div class="col-md-4" >
                        <div class="card mb-4 product-wap rounded-0">
                            <div class="card rounded-0">
                                <img class="card-img rounded-0 img-fluid" src="/uplode/<%= pro.productImage %>">
                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                    <ul class="list-unstyled">
                                        <li>
                                        <% if (like == null) { %>
                                            <a class="btn btn-success text-white" href="/user/product/like/<%= pro._id %>"><i class="far fa-heart"></i></a>
                                             <% }else{ %>
                                                <a class="btn btn-success text-white" href="/user/product/dislike/<%= like._id %>">
                                                    <i class="fa fa-heart" style="color: red;"></i>
                                                </a>
                                                <% } %>
                                            </li>
                                        <li><a class="btn btn-success text-white mt-2" href="/single/product/<%= pro._id %>"><i class="far fa-eye"></i></a></li>
                                       
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body">
                                <a href="/single/product/<%= pro._id %>" class="h3 text-decoration-none"><%= pro.productName %></a>
                              
                                <% pro.variants.forEach(vara => { %>
                                    <p class="text-center mb-0">Size : <%= vara.variantsSize %></p>
                                
                            
                          
                            <p class="text-center mb-0"><%= vara.variantsPrice.toLocaleString('en-US', { style: 'currency', currency: 'inr' }).replace(/\.00$/, ''); %></p>
                            <br><br>
                        </div><% }) %>
                        </div>
                       
                    </div>
                    <div style="position: absolute; left: 40%;">
                        <form action="/user/rate/product" method="post">
                        <input type="hidden" name="userid" value="<%= user._id %>">
                        <input type="hidden" name="name" value="<%= user.firstName +" "+ user.lastName %>">
                        <input type="hidden" name="date" value="<%= date %>">
                        <input type="hidden" name="productid" value="<%= pro._id %>">
                        <h1 style="font-size: 40px;">Type Your Comment And Rating</h1>
                        <h4>Rate 5/5</h3>
                        <input type="number" name="rate" minlength="0.1" maxlength="5" required><br>
                        <h4>Comment</h3> 

                        <textarea name="comment" id="" cols="30" rows="10"></textarea><br>
                        <button style="width: 320px; background-color: lightgreen; border: 0;">Submit</button>
                    </form>
                    </div>
                    
       

